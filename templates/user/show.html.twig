{% block body %}

<div class="container pt-5">

    <div class="row mb-2">

        <div class="col">

    <h1>User</h1>

        <a class="btn btn-primary" href="{{ path('app_user_index') }}">back to list</a>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
