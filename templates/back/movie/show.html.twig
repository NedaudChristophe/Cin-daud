{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">{{ movie.title }}</h1>
    
<div class="container pt-5">

    <div class="row mb-2">

        <div class="col">

            <a class="btn btn-primary my-3" href="{{ path('app_back_movie_index') }}">Retour Ã  la liste</a>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ movie.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ movie.title }}</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>{{ movie.type }}</td>
                        </tr>
                        <tr>
                            <th>ReleaseDate</th>
                            <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Duration</th>
                            <td>{{ movie.duration }}</td>
                        </tr>
                        <tr>
                            <th>Summary</th>
                            <td>{{ movie.summary }}</td>
                        </tr>
                        <tr>
                            <th>Synopsis</th>
                            <td>{{ movie.synopsis }}</td>
                        </tr>
                        <tr>
                            <th>Poster</th>
                            <td>{{ movie.poster }}</td>
                        </tr>
                        <tr>
                            <th>Rating</th>
                            <td>{{ movie.rating }}</td>
                        </tr>
                    </tbody>
                </table>

                
               
                <a class="btn btn-warning mb-2" style="width: 105px;" href="{{ path('app_back_movie_edit', {'id': movie.id}) }}">Editer</a>
                    
                    {% if is_granted('ROLE_ADMIN') %}

                        {{ include('back/movie/_delete_form.html.twig') }}
                        
                    {% endif %}
                
        </div>
    </div>
</div>

{% endblock %}
