{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}

{% block body %}
    <h1 class="text-center">Season index</h1>
        <div class="container pt-5">

        <div class="row mb-2">
    
            <div class="col">
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>EpisodeNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.episodeNumber }}</td>
                <td>
                    <a href="{{ path('app_back_season_show', {'id': season.id}) }}">Voir</a>
                    <a href="{{ path('app_back_season_edit', {'id': season.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_season_new') }}">Create new</a>

   </div>
</div>
</div>
{% endblock %}
