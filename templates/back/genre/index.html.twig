{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
<div class="container pt-5">

    <div class="row mb-2">
        <div class="col">   
                    <h1 class="text-center my-5">Genre index</h1>
                    <a class="btn btn-primary" href="{{ path('app_back_genre_new') }}">Ajouter un Genre</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>GenreId</th>
                                    <th>Name</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for genre in genres %}
                                <tr>
                                    <td>{{ genre.genreId }}</td>
                                    <td>{{ genre.name }}</td>
                                    <td>
                                        <a class="btn btn-sm btn-primary mx-2" href="{{ path('app_back_genre_show', {'genreId': genre.genreId}) }}">Voir</a>
                                        <a class="btn btn-sm btn-warning" href="{{ path('app_back_genre_edit', {'genreId': genre.genreId}) }}">Editer</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>   
                </div>
            </div>
        </div>
 {% endblock %}


       
        
