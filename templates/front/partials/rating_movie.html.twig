<div class="d-flex" style="color: orange;">
    {% for i in 1..5 %}
        {% if movie.rating > i or movie.rating == i %}
            <i class="bi bi-star-fill"></i>
        {% else %}
            {% if movie.rating - i < 0 and movie.rating - i > -1 %}
                <i class="bi bi-star-half"></i>
            {% else %}
                <i class="bi bi-star"></i>
            {% endif %}
        {% endif %}
    {% endfor %}

    <span class="ps-1">
        {{movie.rating}}
    </span>
</div>