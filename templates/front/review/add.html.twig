{% extends 'base.html.twig' %}

{% block title %}Ajouter une critique pour {{ movie.title}}{% endblock %}

{% block body %}

<div class="container pt-5">

    <div class="row mb-2">
        <h2 class="text-muted fw-bold mb-4">Ajouter une critique pour {{ movie.title}}</h2>
        <div class="col">

        
            {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

            {{ form_widget(form) }}

                <button type="submit" class="btn btn-success">Envoyer</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
